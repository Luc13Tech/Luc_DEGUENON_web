    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('ticketForm');
            const successMessage = document.getElementById('successMessage');
            
            // Définir la date d'aujourd'hui comme date par défaut
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];
            document.getElementById('purchaseDate').value = formattedDate;
            
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Récupérer les valeurs du formulaire
                const formData = {
                    visitorName: document.getElementById('visitorName').value,
                    ticketType: document.getElementById('ticketType').value,
                    ticketAmount: document.getElementById('ticketAmount').value,
                    ticketCode: document.getElementById('ticketCode').value,
                    purchaseDate: document.getElementById('purchaseDate').value,
                    comment: document.getElementById('comment').value
                };
                
                // Préparer l'email
                prepareEmail(formData);
            });
            
            function prepareEmail(data) {
                // Adresse email de destination
                const email = 'h00821613@gmail.com';
                
                // Sujet de l'email
                const subject = `Vérification de ticket ${data.ticketType} - ${data.visitorName}`;
                
                // Corps de l'email
                const body = `
Bonjour,

Je souhaite vérifier mon ticket prépayé avec les informations suivantes :

- Nom du visiteur : ${data.visitorName}
- Type de ticket : ${data.ticketType}
- Montant du ticket : ${data.ticketAmount} €
- Code du ticket : ${data.ticketCode}
- Date d'achat : ${data.purchaseDate}
- Commentaire : ${data.comment || 'Aucun'}

Merci de procéder à la vérification de ce ticket.

Cordialement,
${data.visitorName}
                `;
                
                // Encoder les composants de l'URL
                const encodedSubject = encodeURIComponent(subject);
                const encodedBody = encodeURIComponent(body);
                
                // Créer le lien mailto
                const mailtoLink = `mailto:${email}?subject=${encodedSubject}&body=${encodedBody}`;
                
                // Ouvrir le client email
                window.location.href = mailtoLink;
                
                // Afficher le message de confirmation
                successMessage.style.display = 'block';
                
                // Réinitialiser le formulaire
                form.reset();
                
                // Redéfinir la date d'aujourd'hui
                document.getElementById('purchaseDate').value = formattedDate;
                
                // Masquer le message après 5 secondes
                setTimeout(() => {
                    successMessage.style.display = 'none';
                }, 5000);
            }
        });
    </script>
